{
  "version": "independent",
  "packages": ["packages/*", "apps/*"],
  "command": {
    "bootstrap": {
      "npmClient": "yarn",
      "ignore": "@sortlist/*-app"
    },
    "run": {
      "npmClient": "yarn"
    },
    "publish": {
      "npmClient": "npm",
      "allowBranch": ["master",
        "canary",
        "feature/check-publish-from-another-branch"],
      "registry": "https://npm.pkg.github.com"
    }
  },
  "useWorkspaces": true,
  "npmClient": "yarn"
}
